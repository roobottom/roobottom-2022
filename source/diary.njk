---
title: Diary
layout: default
section_id: diary
eleventyExcludeFromCollections: true
pagination:
  data: collections.diary
  size: 50
  alias: items
---
{% from './includes/card.njk' import card as card %}

<ul class="list list--grid">
  {% for item in items %}
    <li class="list-item">
      {{ card({
        title: item.data.title,
        url: item.url,
        cover: item.data.cover or item.data.photo[0].url,
        date: item.date | date('ddd D MMMM YYYY, h:mm a'),
        badge: item.data.photo | length + ' images' if item.data.photo | length > 1
      }) }}
    </li>
  {% endfor %}
</ul>

<nav aria-labelledby="pages">
  <h2 class="pages">Explore posts in the diary</h2>
  <ul>
  {% for i in range(0, pagination.pages | length) %}
    {% set numberOfPostOnThisPage = pagination.pages[i] | length - 1 %}
    <li><a href="{{ pagination.hrefs[i] }}"{% if page.url == pagination.hrefs[i] %} aria-current="page"{% endif %}>From  {{ pagination.pages[i][0].date | date }} until {{ pagination.pages[i][numberOfPostOnThisPage].date | date }}</a></li>
  {% endfor %}
  </ul>
</nav>