---
eleventyComputed:
  title: "{{ monthYear.title }}"
section_id: diary
layout: default
eleventyExcludeFromCollections: true
pagination:
  data: collections.diaryArchive
  size: 1
  alias: monthYear
permalink: "diary/{{ monthYear.title | lower | slugify }}/index.html"
breadcrumbs:
  - title: Home
    url: /
  - title: Diary
    url: /diary/
---
{% from './includes/card.njk' import card as card %}
<ul class="list list--grid space--margin-bottom-xl">
  {% for item in monthYear.posts %}
    <li class="list-item">
      {{ card({
        title: item.data.title,
        url: item.url,
        cover: item.data.cover or item.data.photo[0].url,
        date: item.date | date('dddd D MMMM YYYY [at] h:mm a'),
        badge: item.data.photo | length + ' images' if item.data.photo | length > 1
      }) }}
    </li>
  {% endfor %}
</ul>